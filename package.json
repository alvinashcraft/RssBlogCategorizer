{
  "name": "rss-blog-categorizer",
  "displayName": "RSS Blog Categorizer",
  "description": "Fetches RSS feeds from developer blogs and categorizes them with HTML/Markdown export functionality",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:rssBlogCategorizerView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "rssBlogCategorizerView",
          "name": "Dev Blog Posts",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "rssBlogCategorizer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rssBlogCategorizer.exportMarkdown",
        "title": "Export as Markdown",
        "icon": "$(markdown)"
      },
      {
        "command": "rssBlogCategorizer.exportHtml",
        "title": "Export as HTML",
        "icon": "$(globe)"
      },
      {
        "command": "rssBlogCategorizer.openPost",
        "title": "Open Post"
      },
      {
        "command": "rssBlogCategorizer.addFeed",
        "title": "Set RSS Feed",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rssBlogCategorizer.refresh",
          "when": "view == rssBlogCategorizerView",
          "group": "navigation"
        },
        {
          "command": "rssBlogCategorizer.addFeed",
          "when": "view == rssBlogCategorizerView",
          "group": "navigation"
        },
        {
          "command": "rssBlogCategorizer.exportMarkdown",
          "when": "view == rssBlogCategorizerView"
        },
        {
          "command": "rssBlogCategorizer.exportHtml",
          "when": "view == rssBlogCategorizerView"
        }
      ]
    },
    "configuration": {
      "title": "RSS Blog Categorizer",
      "properties": {
        "rssBlogCategorizer.feedUrl": {
          "type": "string",
          "default": "https://dev.to/feed",
          "description": "Single RSS feed URL to monitor"
        },
        "rssBlogCategorizer.recordCount": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 200,
          "description": "Number of records to retrieve from RSS feed (appended as ?n=X parameter)"
        },
        "rssBlogCategorizer.minimumDateTime": {
          "type": "string",
          "default": "",
          "description": "Minimum datetime for blog posts (ISO format, e.g., 2025-01-01T00:00:00Z). Leave empty to use posts from last 24 hours"
        },
        "rssBlogCategorizer.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Refresh interval in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2"
  }
}