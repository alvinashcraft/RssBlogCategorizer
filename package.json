{
  "name": "rss-blog-categorizer",
  "displayName": "RSS Blog Categorizer and Link Blog Post Generator",
  "description": "Fetches RSS feeds from developer blogs and categorizes them with HTML/Markdown export functionality to generate link blog posts.",
  "icon": "images/feedIcon.png",
  "version": "2.2.3",
  "publisher": "alvinashcraft",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinashcraft/RssBlogCategorizer.git"
  },
  "homepage": "https://github.com/alvinashcraft/RssBlogCategorizer#readme",
  "readme": "README.md",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "rssBlogCategorizerView",
          "name": "Dev Blog Posts",
          "icon": "images/feedIcon.png",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "rssBlogCategorizer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rssBlogCategorizer.exportMarkdown",
        "title": "Export as Markdown",
        "icon": "$(markdown)"
      },
      {
        "command": "rssBlogCategorizer.exportHtml",
        "title": "Export as HTML",
        "icon": "$(globe)"
      },
      {
        "command": "rssBlogCategorizer.openPost",
        "title": "Open Post"
      },
      {
        "command": "rssBlogCategorizer.addFeed",
        "title": "Set RSS Feed",
        "icon": "$(edit)"
      },
      {
        "command": "rssBlogCategorizer.setNewsblurCredentials",
        "title": "Set NewsBlur Credentials",
        "icon": "$(key)"
      },
      {
        "command": "rssBlogCategorizer.setWordpressCredentials",
        "title": "Set WordPress Credentials",
        "icon": "$(key)"
      },
      {
        "command": "rssBlogCategorizer.testWordpressConnection",
        "title": "Test WordPress Connection",
        "icon": "$(plug)"
      },
      {
        "command": "rssBlogCategorizer.publishToWordpress",
        "title": "Publish to WordPress",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "rssBlogCategorizer.openWysiwygEditor",
        "title": "RSS Blog Categorizer: Open in WYSIWYG Editor",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rssBlogCategorizer.refresh",
          "when": "view == rssBlogCategorizerView",
          "group": "navigation"
        },
        {
          "command": "rssBlogCategorizer.addFeed",
          "when": "view == rssBlogCategorizerView",
          "group": "navigation"
        },
        {
          "command": "rssBlogCategorizer.exportMarkdown",
          "when": "view == rssBlogCategorizerView"
        },
        {
          "command": "rssBlogCategorizer.exportHtml",
          "when": "view == rssBlogCategorizerView"
        },
        {
          "command": "rssBlogCategorizer.setNewsblurCredentials",
          "when": "view == rssBlogCategorizerView"
        },
        {
          "command": "rssBlogCategorizer.setWordpressCredentials",
          "when": "view == rssBlogCategorizerView"
        },
        {
          "command": "rssBlogCategorizer.testWordpressConnection",
          "when": "view == rssBlogCategorizerView"
        }
      ],
      "editor/title": [
        {
          "command": "rssBlogCategorizer.openWysiwygEditor",
          "when": "resourceExtname == .html",
          "group": "navigation"
        },
        {
          "command": "rssBlogCategorizer.publishToWordpress",
          "when": "resourceExtname == .html && resourcePath =~ /.*Dew Drop.*/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "RSS Blog Categorizer and Link Blog Post Generator",
      "properties": {
        "rssBlogCategorizer.feedUrl": {
          "type": "string",
          "default": "https://dev.to/feed",
          "description": "Single RSS feed URL to monitor"
        },
        "rssBlogCategorizer.recordCount": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 500,
          "description": "Number of records to retrieve from RSS feed (appended as ?n=X parameter)"
        },
        "rssBlogCategorizer.minimumDateTime": {
          "type": "string",
          "default": "",
          "description": "Minimum datetime for blog posts in UTC (ISO format, e.g., 2025-01-01T00:00:00Z or 2025-01-01T00:00:00.000Z). Leave empty to automatically use the date of the latest 'Dew Drop' post from alvinashcraft.com, or fall back to last 24 hours (UTC) if unavailable. All date comparisons use UTC timezone."
        },
        "rssBlogCategorizer.enablePostFilteringBuffer": {
          "type": "boolean",
          "default": true,
          "description": "Enable buffer time when filtering posts by date to avoid edge cases where posts might be missed due to timing differences"
        },
        "rssBlogCategorizer.postFilteringBufferMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 60,
          "description": "Number of minutes to add as buffer when filtering posts (only applies when buffer is enabled)"
        },
        "rssBlogCategorizer.enableAutoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic refresh of RSS feed data. When disabled, refresh is manual only."
        },
        "rssBlogCategorizer.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Refresh interval in minutes (only applies when auto-refresh is enabled)"
        },
        "rssBlogCategorizer.newsblurUsername": {
          "type": "string",
          "default": "",
          "description": "NewsBlur username for API access (enables fetching more than 25 items). Password is stored securely and will be prompted when needed."
        },
        "rssBlogCategorizer.useNewsblurApi": {
          "type": "boolean",
          "default": false,
          "description": "Use NewsBlur API instead of RSS feed (allows more than 25 items with authentication)"
        },
        "rssBlogCategorizer.wordpressBlogUrl": {
          "type": "string",
          "default": "",
          "description": "WordPress blog URL (e.g., https://yourblog.com)"
        },
        "rssBlogCategorizer.wordpressUsername": {
          "type": "string",
          "default": "",
          "description": "WordPress username for publishing. Password is stored securely and will be prompted when needed."
        },
        "rssBlogCategorizer.wordpressCategories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Daily Links",
            "Development"
          ],
          "description": "Default WordPress categories to assign to published posts"
        },
        "rssBlogCategorizer.openLinksInNewTab": {
          "type": "boolean",
          "default": false,
          "description": "Open blog post links in a new browser tab when clicked (adds target=\"_blank\" to HTML exports)"
        },
        "rssBlogCategorizer.enableDometrainSection": {
          "type": "boolean",
          "default": false,
          "description": "Enable Dometrain Course section in exports (highlights a different video training course from Dometrain every day)"
        },
        "rssBlogCategorizer.dometrainLastCourseId": {
          "type": "string",
          "default": "",
          "description": "Last Dometrain course ID shown (used for cycling through courses). Syncs across computers if VS Code settings sync is enabled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "test": "node ./out/test/runTest.js",
    "test:basic": "mocha --require ts-node/register src/test/basic/**/*.test.ts",
    "test:unit": "mocha --require ts-node/register src/test/unit/**/*.test.ts",
    "test:unit:compiled": "mocha out/test/unit/**/*.test.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.2",
    "@types/sinon-chai": "^3.2.12",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.8",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^13.0.1",
    "glob": "^10.3.10",
    "minimatch": "^5.1.6",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "tinymce": "^8.1.2"
  }
}
